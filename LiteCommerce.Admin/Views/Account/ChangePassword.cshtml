@{
    ViewBag.Title = "Change password";
    ViewBag.Manage = "Change password";
}

<div class="box box-primary">
    <div class="box-body">
        <div class="information-right-content">
            <form role="form" action="~/Account/ChangePassword" method="post">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Current password @Html.ValidationMessage("MatKhauMoi", new { @style = "color: red" })</label>
                        <input type="password" class="text form-control" placeholder="Please enter your current password" name="pw"  required>
                        <p class="text-danger" ></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" class="text form-control" placeholder="Please enter new password"  name="pwn" required>
                        <p class="text-danger" ></p>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Confirm password @Html.ValidationMessage("MatKhau", new { @style = "color: red" })</label>
                        <input type="password" class="text form-control" placeholder="Please enter confirm password" name="confirmpw" required>
                        <p class="text-danger"></p>
                    </div>
                </div>
                <div class="form-group " style="float:right;padding-top:10px;padding-right:15px;">
                    <button type="submit" class="btn btn-primary mb-5"><div class="fa fa-save"></div> Change</button>
                </div>
            </form>

        </div>
    </div>
</div>
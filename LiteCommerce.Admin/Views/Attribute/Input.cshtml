
@model LiteCommerce.DomainModels.Attributes
@{
}
<div class="box box-primary">
    <form role="form" action="~/Attribute/Input" method="post">
        <div class="box-header text-right">
            <a href="~/Attribute/Index/@Model.ProductID">Back to List</a>
        </div>
        <div class="box-body">
            <input type="hidden" name="CategoryID" value="@Model.AttributeID" />
            <div class="form-group">
                <label>Attribute Name: @Html.ValidationMessage("AttributeName", new { @style = "color: red" })</label>
                <input type="text" class="form-control" placeholder="Enter Attribute Name" name="AttributeName" value="@Model.AttributeName">
            </div>
            <div class="form-group row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <label>Description:</label>
                    <textarea class="form-control" rows="4" name="Description" value="">@Model.Size</textarea>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Attribute/Index/@Model.ProductID">
                Cancel
            </a>
        </div>
    </form>
</div>



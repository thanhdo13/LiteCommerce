@model LiteCommerce.DomainModels.Product
@{
}
<div class="box box-primary">
    <form role="form" action="~/Product/Input" method="post" enctype="multipart/form-data" >
        <div class="box-header text-right">
            <a href="~/Product">Back to List</a>
        </div>
        <div class="box-body">
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <div class="form-group">
                <label>ProductName: @Html.ValidationMessage("ProductName", new { @style = "color: red" })</label>
                <input type="text" class="form-control" placeholder="ProductName" name="ProductName" value="@Model.ProductName">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Supplier:</label>
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control" })
                    @*<select class="form-control">
                        <option value="">-- Choose Category --</option>
                        <option value="1">Beverages</option>
                        <option value="2">Condiments</option>
                        <option value="3">Confections</option>
                        <option value="4">Dairy Products</option>
                    </select>*@
                </div>
                <div class="col-sm-6">
                    <label>Category:</label>
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categories(), new { @class = "form-control" })
                    @*<select class="form-control">
                <option value="">-- Choose Category --</option>
                <option value="1">Beverages</option>
                <option value="2">Condiments</option>
                <option value="3">Confections</option>
                <option value="4">Dairy Products</option>
            </select>*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>QuantityPerUnit: @Html.ValidationMessage("QuantityPerUnit", new { @style = "color: red" })</label>                
                        <input type="text" class="form-control" placeholder="QuantityPerUnit" name="QuantityPerUnit" value="@Model.QuantityPerUnit">   
                </div>
                <div class="col-sm-6">
                    <label>UnitPrice:</label>
                        <input type="text" class="form-control" placeholder="UnitPrice" name="UnitPrice" value="@Model.UnitPrice">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <label>Description:</label>
                    <textarea class="form-control" rows="4" name="Descriptions" >@Model.Descriptions</textarea>
                </div>
            </div> 
            <div class="form-group row">
                <div class="col-sm-4">
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <div class="pull-left image">
                                <img id="showThumb" src="~/Images/@Model.PhotoPath" height="100px" width="100px" class="img-circle" alt="User Image">
                            </div>
                            <div>
                                <label style="margin-left: 10px;" for="exampleInputFile">Image input @ViewBag.Message</label>
                                <label style="margin-left: 10px; color:#555; "> <input type="file" id="my_input_file" name="uploadFile"></label>
                                <input type="hidden" name="PhotoPath" id="PhotoPath" value="@Model.PhotoPath" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Product">
                Cancel
            </a>
        </div>
    </form>
</div>

